<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ch1b"
    tools:context=".view.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_gray"
        android:alpha=".85"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_loyalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart" />

        <ImageView
            android:id="@+id/iv_figures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_line_number"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/iv_black_arrow"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/figsetapreta" />

            <TextView
                android:id="@+id/tv_top_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:text="BOTTOM (RIGHT)"
                android:textColor="@color/design_default_color_error"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_card_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_pick_a_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:alpha="0"/>
</FrameLayout>